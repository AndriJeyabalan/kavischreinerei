        <form class="filter-form">
            <input type="text" placeholder="Suchen" name="search">
            <button type="submit">Filtern/Suchen</button>
        </form> 
            <table class="table"> 
                    <thead class="thead">
                        <tr>
                            <th>#</th>
                            <th scope="col"><a href="?sortBy=Id&sortOrder={{sortOrder}}">id</a></th> 
                            <th scope="col"><a href="?sortBy=Firmenname&sortOrder={{sortOrder}}">Firmenname</a></th>
                            <th scope="col"><a href="?sortBy=Email&sortOrder={{sortOrder}}">E-mail</a></th>
                            <th scope="col"><a href="?sortBy=Tel&sortOrder={{sortOrder}}">Tel</a></th>
                            <th scope="col"><a href="?sortBy=Firmenchef&sortOrder={{sortOrder}}">Firmenchef</a></th>
                            <th scope="col"><a href="?sortBy=Strasse&sortOrder={{sortOrder}}">Strasse</a></th>
                            <th scope="col"><a href="?sortBy=Nr&sortOrder={{sortOrder}}">Nr</a></th>
                            <th scope="col"><a href="?sortBy=PLZ&sortOrder={{sortOrder}}">PLZ</a></th>
                            <th scope="col"><a href="?sortBy=Ort&sortOrder={{sortOrder}}">Ort</a></th>
                            <th>#</th>
                        </tr>
                    </thead>
                    <tbody>
                        <form name="speichernform" id="adminspeichern-form" method="POST" action="/adminlieferanten">
                            <tr> 
                                <td ></td>
                                <td ><input name="id"/></td>
                                <td><input name="firmenname"/></td>
                                <td ><input name="email"/></td>
                                <td><input name="tel"/></td>
                                <td><input name="firmenchef"/></td>
                                <td ><input name="strasse"/></td>
                                <td><input name="nr"/></td>
                                <td><input name="plz"/></td>
                                <td><input name="ort"/></td>
                                <td>
                                    <span class="icon-grid">
                                         <button class="save-btn" type="submit"><img src="../images/save-icon.png"></button>
                                    </span>
                                </td>
                            </tr>
                        </form>  
                    {{#each rows}}  
                        <tr> 
                            <form name="adminform" id="admin-form" method="POST" action="/deleteadminlieferanten/{{this.Id}}">
                                <td>
                                    <span class="icon-grid">
                                        <button class="delete-btn" type="submit"><img src="../images/loeschen-icon.png"></button>
                                    </span>
                                </td>
                            </form>
                            <form name="adminform" id="admin-form" method="POST" action="/updateadminlieferanten/{{this.Id}}">
                                <td ><input name="id" value="{{this.Id}}" /></td>
                                <td><input name="firmenname" value="{{this.Firmenname}}"/></td>
                                <td><input name="email" value="{{this.Email}}"/></td>
                                <td ><input name="tel" value="{{this.Tel}}"/></td>
                                <td><input name="firmenchef" value="{{this.Firmenchef}}"/></td>
                                <td><input name="strasse" value="{{this.Strasse}}"/></td>
                                <td ><input name="nr" value="{{this.Nr}}"/></td>
                                <td><input name="plz" value="{{this.PLZ}}"/></td>
                                <td><input name="ort" value="{{this.Ort}}"/></td>
                                <td>
                                    <span class="icon-grid">
                                        <button class="bestätigen-btn" type="submit"><img src="../images/bestätigen-icon.png"></button>
                                    </span> 
                                </td>
                            </form>  
                        </tr> 
                       
                    {{/each}}
                </tbody>
            </table> 
    </body>
