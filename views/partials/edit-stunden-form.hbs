<div class="form-group">
  <label for="date">Datum:</label>
  <input type="date" id="datum" name="datum" title="Bitte geben Sie das Datum ein" required value="{{rows.formattedDate}}" />
</div>

<div class="form-group">
  <label for="client">Kundenname:</label>
  <input type="text" id="kunde" name="kunde" title="Bitte geben Sie den Kunden ein" required value="{{rows.Kundenname}}" />
  <div id="client-suggestions"></div>
</div>

<div class="form-group">
  <label for="hours">Stunden:</label>
  <input type="number" id="stunden" name="stunden" min="0" step="0.25" title="Bitte geben Sie die Stunden ein" required value="{{rows.Stunden}}" />
</div>

<div class="form-group">
  <label for="arbeit">Erledigte Arbeit:</label>
  <textarea type="text" id="arbeit" name="arbeit" title="Bitte geben Sie an, was Sie gemacht haben" required>{{rows.Erledigte_Arbeit}}</textarea>
</div>

<div class="button-container">
  <input type="hidden" name="id" value="{{rows.Id}}" />
  <input type="submit" value="Speichern" id="save-btn" name="action" class="submit-btn" />
