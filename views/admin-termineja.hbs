          <table class="table" >
              <thead class="thead"> 
                  <tr>
                    <th>#</th>
                    <th scope="col"><a href="?sortBy=Id&sortOrder={{sortOrder}}">Id</a></th> 
                    <th scope="col"><a href="?sortBy=Datum&sortOrder={{sortOrder}}">Datum</a></th>
                    <th scope="col"><a href="?sortBy=Zeit&sortOrder={{sortOrder}}">Zeit</a></th>
                    <th scope="col"><a href="?sortBy=Notiz&sortOrder={{sortOrder}}">Notiz</a></th>
                    <th scope="col"><a href="?sortBy=Arbeiter&sortOrder={{sortOrder}}">Arbeiter</a></th>
                    <th scope="col"><a href="?sortBy=Erledigt&sortOrder={{sortOrder}}">Erledigt</a></th>
                    <th>#</th>
                  </tr>
              </thead> 
              <tbody class="tbody">
                <form name="speichernform" id="adminspeichern-form" method="POST" action="/saveadmintermineja">
                            <tr> 
                                <td></td>
                                <td ><input name="id"/></td>
                                <td><input type="date" name="datum"/></td>
                                <td ><input type="time" name="zeit"/></td>
                                <td ><input name="notiz"/></td>
                                <td><input name="arbeiter"/></td>
                                <td><input name="erledigt"/></td>
                                <td>
                                    <span class="icon-grid">
                                         <button class="save-btn" type="submit"><img src="../images/save-icon.png"></button>
                                    </span>
                                </td>
                            </tr>  
                    </form>  
                  {{#each rows}} 
                    <tr> 
                        <form name="adminform" id="admin-form" method="POST" action="/deleteadmintermineja/{{this.Id}}">
                            <td>
                                <span class="icon-grid">
                                    <button class="delete-btn" type="submit"><img src="../images/loeschen-icon.png"></button>
                                </span>
                            </td> 
                        </form>
                        <form name="adminform" id="admin-form" method="POST" action="/alteradminkundenja/{{this.Id}}">
                            <td ><input name="id" value="{{this.Id}}" /></td>
                            <td><input name="datum" value="{{this.Datum}}"/></td>
                            <td ><input name="zeit" value="{{this.Zeit}}"/></td>
                            <td><textarea name="notiz"/>{{this.Notiz}}</textarea></td>
                            <td><input name="arbeiter" value="{{this.Arbeiter}}"/></td>
                            <td><input name="erledigt" value="{{this.Erledigt}}"/></td>
                            <td>
                              <span class="icon-grid">
                                  <input type="submit" class="bestätigen-btn" value="Bestätigen">
                              </span> 
                            </td> 
                        </form>
                      </tr>  
                    {{/each}} 
                  </tbody>
            </table> 
    </body>
</html>  